Config { font = "-misc-fixed-*-*-*-*-13-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "white"
       , position = Top
       , lowerOnStart = False
       , overrideRedirect = False
       , persistent = False
       , allDesktops = True
       , commands = [ Run Weather "KBOS" ["-t","KBOS: <tempF>F","-L","32","-H","70","--normal","green","--high","red","--low","lightblue"] 36000
                    , Run Network "eno1" ["-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
    		    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
		    , Run CoreTemp       [ "--template" , "Temp: <core0>째C|<core1>째C"
		                         , "--Low"      , "40"        -- units: 째C
		                         , "--High"     , "80"        -- units: 째C
		                         , "--low"      , "darkgreen"
					 , "--normal"   , "darkorange"
					 , "--high"     , "darkred"
					 ] 50
		    , Run Com "ibam"["| tail -n 1"] "" 100
		    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{%cpu% | %memory% * %swap% | %eno1% | <fc=#ee9a00>%date%</fc>| %KBOS% | %coretemp% | %ibam%"
       }
